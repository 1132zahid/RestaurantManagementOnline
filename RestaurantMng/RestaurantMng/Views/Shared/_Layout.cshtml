<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Galaxy Restaurant</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div id="header" style="background-color: white">
            <img  src="~/Content/img/logo.jpg" class="img-responsive" alt="Responsive image">
         </div>
        <div class="masthead">
            @*<h3 class="text-muted">@Html.ActionLink("Galaxy Restaurant", "Index", "Home")</h3>*@
            <ul class="nav nav-justified">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "active" })</li>
                <li>@Html.ActionLink("Menu", "Index", "Menu")</li>
                <li>@Html.ActionLink("Booking", "Contact", "Home")</li>
                <li>@Html.ActionLink("Order", "Contact", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
    
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p><b>&copy; @DateTime.Now.Year - Developed by Zahid, Nur Alam, Netu, Farha, Jeba.</b></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
